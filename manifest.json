{
  "manifest_version": 3,
  "name": "Word Translator",
  "version": "1.0",
  "description": "Translate words on hover using Google Translate.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "https://translate.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
