{
  "manifest_version": 3,
  "name": "Word Translator",
  "version": "1.0",
  "description": "Translate selected words using Google Translate.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage", 
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
